<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="errorText" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/red_700</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>
    <style name="textInput" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/blue_200</item>
        <item name="colorPrimaryDark">@color/blue_500</item>
        <item name="colorAccent">@color/white</item>
    </style>
    <style name="counterText">
        <item name="android:textColor">#aa5353cc</item>
    </style>

    <style name="counterOverride">
        <item name="android:textColor">#ff0000</item>
    </style>
    <style name="buttonFloat" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:backgroundTint">@color/blue_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAppearanceButton">@style/AppTextAppearance.Button</item>
    </style>
    <style name="AppTextAppearance.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="datePickerDialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/blue_500</item>
        <item name="colorControlActivated">@color/blue_800</item>
        <item name="android:selectableItemBackgroundBorderless">@color/blue_800</item>
        <item name="android:calendarTextColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
    </style>
</resources>